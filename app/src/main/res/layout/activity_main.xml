<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.nps.sample.MainActivity">

    <Button
        android:id="@+id/btnShowOfferwall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show Offerwall" />

    <Button
        android:id="@+id/btnLoadVideo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Load Rewarded Video" />

    <Button
        android:id="@+id/btnLoadInterstitial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Load Interstitial" />

    <Button
        android:id="@+id/btnPreloadRewardedInterstitial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Preload Rewarded Interstitial" />

    <Button
        android:id="@+id/btnPreloadAllRewardedInterstitial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PreloadAll Rewarded Interstitial" />

</LinearLayout>
